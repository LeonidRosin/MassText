<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dallinc.masstexter"
    android:versionCode="7"
    android:versionName="1.1.2" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <uses-permission android:name="android.permission.SEND_SMS" >
    </uses-permission>
    <uses-permission android:name="android.permission.READ_SMS" >
    </uses-permission>
    <uses-permission android:name="android.permission.WRITE_SMS" >
    </uses-permission>
    <uses-permission android:name="android.permission.READ_CONTACTS" >
    </uses-permission>

    <application
        android:allowBackup="true"
        android:icon="@drawable/mass_text_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.dallinc.masstexter.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dallinc.masstexter.EditGroup"
            android:label="@string/title_activity_edit_group" >
        </activity>
        <activity
            android:name="com.dallinc.masstexter.GroupManage"
            android:label="@string/title_activity_group_manage" >
        </activity>
        <activity
            android:name="com.dallinc.masstexter.MessageManage"
            android:label="@string/title_activity_message_manage" >
        </activity>
        <activity
            android:name="com.dallinc.masstexter.EditMessage"
            android:label="@string/title_activity_edit_message" >
        </activity>
    </application>

</manifest>